<div class="wrapper">
    <h1>Competitor Entries Now Open!</h1>

    <div class="button-holder">
        <a type="button" href="/create" class="button">Race Entry</a>
    </div>
    <div class="content">
        <div class="header">
            <div class="competitor-label">Name</div>
            <div class="competitor-label">Team</div>
            <div class="competitor-label">Category</div>
            <div class="actions-label">Actions</div>
        </div>
        <div class="main">
            {{#each competitors}}
                <div class="competitor">
                    <div class="competitor-item">
                        {{name}}
                    </div>
                    <div class="competitor-item">
                        {{team}}
                    </div>
                    <div class="competitor-item">
                        {{category}}
                    </div>
                    <div class="competitor-item competitor-actions">
                        <a type="button" href="/edit/{{id}}" class="competitorbutton">Edit</a>
                        <a type="button" href="/delete/{{id}}" class="competitorbutton">Remove</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>